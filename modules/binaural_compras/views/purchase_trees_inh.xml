<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_tree_inherited_binaural_compras_tree" model="ir.ui.view">
            <field name="name">Extension de listado de ordenes 1: agregar campos</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <!--add fields: vat,adress,bussines name-->
                <field name="partner_id" position="after">
                    <field name="business_name" optional="show"/>
                    <field name="vat" optional="show"/>   
                    <field name="address" optional="show"/>  
                    <field name="phone" optional="show"/>                
                </field>
	            <field name="amount_total" position="before">
                    <field name="foreign_currency_id" optional="show" invisible="1"/>
                    <field name="foreign_currency_rate" optional="show"/>
                    <field name="foreign_amount_total" optional="show" widget="monetary" options="{'currency_field': 'foreign_currency_id'}"/>
                </field>
            </field>
        </record>
    
