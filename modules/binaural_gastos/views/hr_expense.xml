<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_hr_expense_view_form" model="ir.ui.view">
            <field name="name">Extension de formulario de gastos</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
            <field name="arch" type="xml">
                <field name="amount_residual" position="after">
                    <field name="foreign_currency_id" />
                    <field name="foreign_currency_date" />
                    <field name="foreign_currency_rate" />
                    <field name="foreign_total_amount" widget="monetary" options="{'currency_field': 'foreign_currency_id'}" />
                    <field name="foreign_amount_residual" widget="monetary" options="{'currency_field': 'foreign_currency_id'}" />
                </field>
            </field>
        </record>
    </data>
</odoo>