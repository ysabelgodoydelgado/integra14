	    <field name="domain">[("move_type",'=',"profit_sharing")]</field>
	    <field
	    	name="view_ids"
	    	eval="[(5, 0, 0),
		    (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_payroll_move_profit_sharing_view_tree')}),
		    (0, 0, {'view_mode': 'pivot'})]"
	    />
	</record>

	<record id="hr_payroll_move_liquidation_action" model="ir.actions.act_window">
	    <field name="name">Pagos de liquidaciones</field>
	    <field name="res_model">hr.payroll.move</field>
	    <field name="domain">[("move_type",'=',"liquidation")]</field>
