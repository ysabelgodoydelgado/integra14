        <!-- estructura salarial Utilidades Mensual -->
        <record id="structure_payroll_13month" model="hr.payroll.structure">
            <field name="name">Nomina Utilidades</field>
            <field name="type_id" ref="structure_type_40h_month" />
            <field name="category">profit_sharing</field>
            <field name="use_worked_day_lines" eval="True" />
            <field name="country_id" search="[('name','=','Venezuela')]"/>
