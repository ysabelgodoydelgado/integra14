<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <!-- diario con codigo SS condicionado -->
        <function model="account.journal" name="load_master_data_journal">                                     
        </function>        

        <record id="config_default_dia_adicional_posterior" model="ir.config_parameter">
            <field name="key">dia_adicional_posterior</field>
            <field name="value">1</field>
        </record>

        <record id="config_default_dia_vacaciones_anno" model="ir.config_parameter">
            <field name="key">dia_vacaciones_anno</field>
            <field name="value">16</field>
        </record>

        <!-- categoria de regla salarial -->
        <record id="hr_salary_rule_category_asignacion" model="hr.salary.rule.category">
            <field name="name">Asignación</field>
            <field name="code">ASIG</field>
            <field name="note">Asignacion</field>
        </record>

        <record id="hr_salary_rule_category_vacation" model="hr.salary.rule.category">
            <field name="name">Vacaciones</field>
            <field name="code">VAC</field>
            <field name="note">Vacaciones</field>
        </record>

        <record id="hr_salary_rule_category_dev" model="hr.salary.rule.category">
            <field name="name">Devengado</field>
            <field name="code">DEV</field>
            <field name="note">Devengado</field>
        </record>

        <record id="hr_salary_rule_category_other" model="hr.salary.rule.category">
            <field name="name">Otros cálculos</field>
            <field name="code">OTR</field>
            <field name="note">Otros</field>
        </record>

        <!-- tipo entrada de trabajo -->
        <!-- OJO: Se usa la referencia de ausencias  -->
        <record id="hr_work_entry_binaural_weekend" model="hr.work.entry.type">
            <field name="name">Fin de semana</field>
            <field name="code">FSAP01</field>
            <field name="is_leave" eval="False" />                        
            <field name="round_days">NO</field>            
        </record>

         <record id="hr_work_entry_binaural_asistencia_nocturna" model="hr.work.entry.type">
            <field name="name">Asistencia nocturna</field>
            <field name="code">ASISNOC</field>
            <field name="is_leave" eval="False" />                        
            <field name="round_days">NO</field>            
        </record>

        <record id="hr_work_entry_binaural_extra_hours" model="hr.work.entry.type">
            <field name="name">Horas extra trabajada</field>
            <field name="code">HE01</field>
            <field name="is_leave" eval="False" />
            <field name="leave_type_ids" eval="[(6,0,[ref('hr_holidays.holiday_status_cl')])]" />
            <field name="round_days">NO</field>            
        </record>

         <record id="hr_work_entry_binaural_extra_hours_night" model="hr.work.entry.type">
            <field name="name">Horas extra trabajada (nocturna)</field>
            <field name="code">HEN01</field>
            <field name="is_leave" eval="False" />
            <field name="leave_type_ids" eval="[(6,0,[ref('hr_holidays.holiday_status_cl')])]" />
            <field name="round_days">NO</field>            
        </record>

        <!-- OJO: Se usa la referencia de ausencias  -->
        <record id="hr_work_entry_binaural_holiday" model="hr.work.entry.type">
            <field name="name">Feriado de ley trabajado</field>
            <field name="code">FLAP02</field>
            <field name="is_leave" eval="False" />
            <field name="leave_type_ids" eval="[(6,0,[ref('hr_holidays.holiday_status_cl')])]" />
            <field name="round_days">NO</field>            
        </record>
        
        <record id="hr_work_entry_binaural_break_day" model="hr.work.entry.type">
            <field name="name">Día de descanso trabajado</field>
            <field name="code">DIADESC</field>
            <field name="is_leave" eval="False" />
            <field name="leave_type_ids" eval="[(6,0,[ref('hr_holidays.holiday_status_cl')])]" />            
            <field name="round_days">NO</field>            
        </record>

        <record id="hr_work_entry_binaural_vacation" model="hr.work.entry.type">
            <field name="name">Vacaciones</field>
            <field name="code">VAC</field>
            <field name="is_leave" eval="False" />
            <field name="leave_type_ids" eval="[(6,0,[ref('hr_holidays.holiday_status_cl')])]" />
            <field name="round_days">NO</field>
        </record>

         <!-- tipo de ausencias -->
        <record id="hr_leave_feriados" model="hr.leave.type">
            <field name="name">Feriados de ley</field>
            <field name="request_unit">day</field>
            <field name="validity_start" eval="datetime.now().date().replace(month=1, day=1)" />
            <field name="validity_stop" eval="datetime.now().date().replace(month=12, day=31)" />
            <field name="allocation_type">fixed</field>
            <field name="leave_validation_type">no_validation</field>
            <field name="create_calendar_meeting" eval="True" />
            <field name="color_name">violet</field>
            <field name="work_entry_type_id" ref="hr_work_entry_binaural_holiday" />
        </record>       

        <!-- tipo de trabajo diurno (cambiar a este recurso por defecto en la configuracion) -->
        <record id="hr_resource_calendar_diurno_40h" model="resource.calendar">
            <field name="name">40 Horas/Semana Diurna</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="hours_per_day">8.0</field>
            <field name="tz">America/Caracas</field>
            <field name="full_time_required_hours">56</field> <!-- preguntar esto a daniela -->
            <field name="attendance_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'name': 'Lunes mañana', 'dayofweek': '0', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Lunes tarde', 'dayofweek': '0', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Martes mañana', 'dayofweek': '1', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Martes tarde', 'dayofweek': '1', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Miercoles mañana', 'dayofweek': '2', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Miercoles tarde', 'dayofweek': '2', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Jueves mañana', 'dayofweek': '3', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Jueves tarde', 'dayofweek': '3', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Viernes mañana', 'dayofweek': '4', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Viernes tarde', 'dayofweek': '4', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Sabado mañana', 'dayofweek': '5', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Sabado tarde', 'dayofweek': '5', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Domingo mañana', 'dayofweek': '6', 'hour_from': 8, 'hour_to': 12, 'day_period': 'morning','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Domingo tarde', 'dayofweek': '6', 'hour_from': 13, 'hour_to': 17, 'day_period': 'afternoon','work_entry_type_id':ref('hr_work_entry_binaural_weekend')})]"
            />
        </record>

        <record id="hr_resource_calendar_nocturno_35h" model="resource.calendar">
            <field name="name">35 Horas/Semana Nocturna</field>
            <field name="company_id" ref="base.main_company"/>
