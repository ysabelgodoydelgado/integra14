            <field name="tz">America/Caracas</field>
            <field name="full_time_required_hours">35</field>
            <field name="attendance_ids"
                eval="[(5, 0, 0),
                    (0, 0, {'name': 'Lunes mañana', 'dayofweek': '0', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Lunes tarde', 'dayofweek': '0', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Martes mañana', 'dayofweek': '1', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Martes tarde', 'dayofweek': '1', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
