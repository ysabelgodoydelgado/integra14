                    (0, 0, {'name': 'Miercoles tarde', 'dayofweek': '2', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Jueves mañana', 'dayofweek': '3', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Jueves tarde', 'dayofweek': '3', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Viernes mañana', 'dayofweek': '4', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Viernes tarde', 'dayofweek': '4', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry.work_entry_type_attendance')}),
                    (0, 0, {'name': 'Sabado mañana', 'dayofweek': '5', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Sabado tarde', 'dayofweek': '5', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Domingo mañana', 'dayofweek': '6', 'hour_from': 0, 'hour_to': 4, 'day_period': 'early_morning','work_entry_type_id':ref('hr_work_entry_binaural_weekend')}),
                    (0, 0, {'name': 'Domingo tarde', 'dayofweek': '6', 'hour_from': 21, 'hour_to': 24, 'day_period': 'night','work_entry_type_id':ref('hr_work_entry_binaural_weekend')})]"
            />
        </record>

        <!-- tipo de estructura mensual 40 horas -->
        <record id="structure_type_40h_month" model="hr.payroll.structure.type">
            <field name="name">Nomina Mensual / 40 horas por semana (Diurno)</field>
            <field name="country_id" search="[('name','=','Venezuela')]"/>
            <field name="wage_type">monthly</field>
            <field name="default_schedule_pay">monthly</field>
            <field name="default_resource_calendar_id" ref="hr_resource_calendar_diurno_40h" />
            <field name="default_work_entry_type_id" ref="hr_work_entry.work_entry_type_attendance" />
            <!-- <field name="default_struct_id" ref="structure_payroll_monthly" /> este valor hay que asignarlo, buscar la forma --> 
        </record>


        <!-- estructura salarial Básica Mensual -->
        <record id="structure_payroll_basic" model="hr.payroll.structure">
            <field name="name">Nomina Básica</field>
            <field name="category">salary</field>
            <field name="type_id" ref="structure_type_40h_month" />
            <field name="use_worked_day_lines" eval="True" />
            <field name="country_id" search="[('name','=','Venezuela')]"/>
            <field name="report_id" search="[('model','=','hr.payslip'),('report_type','=','qweb-pdf')]" />
            <field name="schedule_pay">monthly</field>  
            <field name="rule_ids" eval="[(5, 0, 0),
                (0,0,{'name': 'Salario basico','sequence': 1, 'code': 'BASIC', 'category_id': ref('hr_payroll.BASIC'), 'condition_select': 'none', 'amount_select': 'code','amount_python_compute': 'result = payslip.paid_amount'}),
                (0,0,{'name': 'Salario neto','sequence': 200,'code': 'NET','category_id': ref('hr_payroll.NET'),'condition_select': 'none','amount_select': 'code', 'amount_python_compute': 'result = categories.BASIC + categories.ASIG + categories.DED'})
                ]" />
        </record>

        <!-- estructura salarial Integral Mensual -->
        <record id="structure_payroll_integral" model="hr.payroll.structure">
            <field name="name">Nomina Integral</field>
            <field name="category">salary</field>
            <field name="type_id" ref="structure_type_40h_month" />
            <field name="use_worked_day_lines" eval="True" />
            <field name="country_id" search="[('name','=','Venezuela')]"/>
