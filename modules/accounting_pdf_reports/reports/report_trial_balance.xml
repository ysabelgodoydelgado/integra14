                                <tr t-foreach="Accounts" t-as="account">
                                    <t t-if="account['bold']">
                                        <td style="font-weight: bold;">
                                            <span t-att-style="style" t-esc="account['code']"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12">
                                            <span style="color: white;" t-esc="'..'"/>
