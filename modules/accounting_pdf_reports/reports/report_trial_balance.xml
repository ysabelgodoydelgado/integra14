                            <tr>
                                <th>Code</th>
                                <th>Account</th>
                                <th class="text-right">Saldo Inicial</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                            </tr>
                        </thead>
                        <t t-if="another_currency">
                            <tbody>
                                <tr t-foreach="Accounts" t-as="account">
                                    <t t-if="account['bold']">
                                        <td style="font-weight: bold;">
                                            <span t-att-style="style" t-esc="account['code']"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-att-style="style" t-esc="account['name']"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12" class="text-right">
                                            <span t-att-style="style" t-esc="account['init_balance']" t-options="{'widget': 'monetary', 'display_currency': foreign_currency_id}"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12" class="text-right">
                                            <span t-att-style="style" t-esc="account['debit']" t-options="{'widget': 'monetary', 'display_currency': foreign_currency_id}"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12" class="text-right">
                                            <span t-att-style="style" t-esc="account['credit']" t-options="{'widget': 'monetary', 'display_currency': foreign_currency_id}"/>
                                        </td>
                                        <td style="font-weight: bold; font-size: 12" class="text-right">
                                            <span t-att-style="style" t-esc="account['balance']" t-options="{'widget': 'monetary', 'display_currency': foreign_currency_id}"/>
                                        </td>
                                    </t>
