                                        <t t-if="data['date_from']">
                                            DEL 
                                            <span t-esc="datetime.datetime.strptime(data['date_from'], '%Y-%m-%d').strftime('%d/%m/%Y')"></span>
                                        </t>
                                        <t t-if="data['date_to']">
                                            AL <span t-esc="datetime.datetime.strptime(data['date_to'], '%Y-%m-%d').strftime('%d/%m/%Y')"></span>
