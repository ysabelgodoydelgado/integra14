<odoo>
    <data>
        <!-- Email -->
        <record id="email_template_edi_account_retention" model="mail.template">
            <field name="name">Sales Order: Send by email</field>
            <field name="model_id" ref="binaural_facturacion.model_account_retention"/>
            <field name="subject">${object.company_id.name} - ${object.number}</field>
            <field name="email_from">${(object.partner_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Escriba aqu√≠.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="binaural_reporte_fiscal.retention_iva_voucher"/>
            <field name="report_name">${(object.number or '')}</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>