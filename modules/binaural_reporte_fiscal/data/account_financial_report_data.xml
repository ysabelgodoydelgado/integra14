<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

	<!-- Balance de comprobación Binaural -->
        <record id="action_account_report_coa_binaural" model="ir.actions.client">
            <field name="name">Balance de comprobación Binaural</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.coa.binaural.report'}" />
        </record>
        <record id="action_account_report_coa_binaural_usd" model="ir.actions.client">
            <field name="name">Balance de comprobación Binaural $</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.coa.binaural.report', 'USD': True}" />
        </record>

	<menuitem id="menu_action_account_report_coa_binaural"
		  name="Balance de comprobación Binaural"
		  action="action_account_report_coa_binaural"
		  parent="account_reports.account_reports_audit_reports_menu"/>
	<menuitem id="menu_action_account_report_coa_binaural_usd"
		  name="Balance de comprobación Binaural $"
		  action="action_account_report_coa_binaural_usd"
		  parent="account_reports.account_reports_audit_reports_menu"/>

	<!-- Accciones de Reportes en USD -->
        <record id="action_account_report_ar_usd" model="ir.actions.client">
            <field name="name">Vencida por Cobrar $</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.aged.receivable', 'USD': True}" />
        </record>
        <record id="action_account_report_ap_usd" model="ir.actions.client">
            <field name="name">Vencida por Pagar $</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.aged.payable', 'USD': True}" />
