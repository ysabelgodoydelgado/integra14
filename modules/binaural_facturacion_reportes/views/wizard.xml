<?xml version="1.0"?>
<odoo>
    <data>
        <record id="wizard_binaural_facturacion_reportes_view" model="ir.ui.view">
            <field name="name">wizard.accounting.reports.view</field>
            <field name="model">wizard.accounting.reports</field>
            <field name="arch" type="xml">
                <form string="Reportes Contables">
                    <sheet>
                        <group>
                            <group>
                                <field name="report" invisible="1"/>
                                <field name="company_id" string="Compañia" invisible="1"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="type_report"/>
                                <field name="currency_sistem"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="generate_report" type="object" string="Generar Informe"/>
                    </footer>
                </form>
            </field>
        </record>

	    <record id="wizard_retention_islr_view" model="ir.ui.view">
            <field name="name">wizard.retention.islr.view</field>
            <field name="model">wizard.retention.islr</field>
            <field name="arch" type="xml">
                <form string="Retenciones de ISLR">
                    <sheet>
                        <group>
                            <group>
                                <field name="report" invisible="1"/>
                                <field name="company_id" string="Compañia" invisible="1"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="imprimir_excel" type="object" string="Excel"/>
                    </footer>
                </form>
            </field>
        </record>
	    <record id="wizard_retention_iva_view" model="ir.ui.view">
            <field name="name">wizard.retention.iva.view</field>
            <field name="model">wizard.retention.iva</field>
            <field name="arch" type="xml">
                <form string="Retenciones de IVA">
                    <sheet>
                        <group>
                            <group>
                                <field name="report" invisible="1"/>
                                <field name="company_id" string="Compañia" invisible="1"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="imprimir_excel" type="object" string="Excel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="wizard_accounting_report_excel_view" model="ir.ui.view">
            <field name="name">wizard.accounting.report.excel.view</field>
            <field name="model">wizard.accounting.reports.excel</field>
            <field name="arch" type="xml">
                <form string="Descargar excel">                    
                    <sheet>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field string="Link de descarga" name="file" widget="binary" filename="filename" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

	    <record id="wizard_retention_islr_excel_view" model="ir.ui.view">
            <field name="name">wizard.retention.islr.excel.view</field>
            <field name="model">wizard.retention.islr.excel</field>
            <field name="arch" type="xml">
                <form string="Descargar excel">
                    <sheet>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field string="Link de descarga" name="file" widget="binary" filename="filename" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
	    <record id="wizard_retention_iva_excel_view" model="ir.ui.view">
            <field name="name">wizard.retention.iva.excel.view</field>
            <field name="model">wizard.retention.iva.excel</field>
            <field name="arch" type="xml">
                <form string="Descargar excel">
                    <sheet>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field string="Link de descarga" name="file" widget="binary" filename="filename" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <act_window id="action_accounting_report_purchase" name="Libro de Compras" res_model="wizard.accounting.reports" view_mode="form" target="new" context="{'default_report': 'purchase'}"/>
        <act_window id="action_accounting_report_sale" name="Libro de Ventas" res_model="wizard.accounting.reports" view_mode="form" target="new" context="{'default_report': 'sale'}"/>

	    <act_window id="action_retention_islr" name="XML Retenciones de ISLR" res_model="wizard.retention.islr" view_mode="form" target="new" context="{'default_report': 'islr'}"/>
	    <act_window id="action_retention_iva" name="Retenciones de IVA" res_model="wizard.retention.iva" view_mode="form" target="new" context="{'default_report': 'iva'}"/>

        <menuitem id="account_report_menu" parent="account.menu_finance_reports" groups="account.group_account_manager" sequence="5" name="Reportes Contables"/>
        <menuitem action="action_accounting_report_purchase" id="account_report_purchase" parent="binaural_facturacion_reportes.account_report_menu" groups="account.group_account_manager" sequence="5"/>
        <menuitem action="action_accounting_report_sale" id="account_report_sale" parent="binaural_facturacion_reportes.account_report_menu" groups="account.group_account_manager" sequence="5"/>

	    <menuitem id="account_report_menu_seniat" parent="account.menu_finance_reports" groups="account.group_account_manager" sequence="5" name="Reportes Seniat"/>
	    <menuitem action="action_retention_islr" id="account_report_retention_islr" parent="binaural_facturacion_reportes.account_report_menu_seniat" groups="account.group_account_manager" sequence="7"/>

	    <menuitem action="action_retention_iva" id="account_report_retention_iva" parent="binaural_facturacion_reportes.account_report_menu_seniat" groups="account.group_account_manager" sequence="7"/>
    </data>
</odoo>