<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_tree_inherited_binaural_ventas_tree" model="ir.ui.view">
            <field name="name">Extension de listado de ordenes 1: agregar campos</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <!--add fields: vat,adress,bussines name-->
                <field name="partner_id" position="after">
                    <field name="business_name" optional="show"/>
                    <field name="vat" optional="show"/>   
                    <field name="address" optional="show"/>  
                    <field name="phone" optional="show"/>                
                </field>
	            <field name="amount_total" position="before">
                    <field name="foreign_currency_rate" optional="show"/>
                    <field name="foreign_amount_total" optional="show"/>
                </field>

            </field>
        </record>
    
        <record id="view_quotation_tree_inherited_binaural_ventas_tree" model="ir.ui.view">
            <field name="name">Extension de listado de ordenes 2: agregar campos</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <!--add fields: vat,adress,bussines name-->
                <field name="partner_id" position="after">
                    <field name="business_name" optional="show"/> 
                    <field name="vat" optional="show"/>   
                    <field name="address" optional="show"/>  
                    <field name="phone" optional="show"/>                
                </field>
	            <field name="amount_total" position="before">
                    <field name="foreign_currency_id" invisible="1"/>
                    <field name="foreign_currency_rate" optional="show"  />
                    <field name="foreign_amount_total" optional="show" widget="monetary" options="{'currency_field': 'foreign_currency_id'}"/>
                </field>
            </field>
        </record>

