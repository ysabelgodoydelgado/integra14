<odoo>
    <record id="view_res_company_form_inherited" model="ir.ui.view">
        <field name="name">res.company.form.inherited</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">


            <notebook position="inside">
                <page string="Datos de Hacienda" name="datos_hacienda">
                    <group col="5" colspan="3">
                        <field name="logo_hacienda" widget="image" colspan="4" class="oe_avatar" />
                        <field name="name_hacienda" />
                        <field name="economic_activity_number" />
                    </group>
                </page>
            </notebook>

        </field>
    </record>
</odoo>