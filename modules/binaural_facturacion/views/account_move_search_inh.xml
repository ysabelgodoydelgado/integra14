<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_form_move_inherited_binaural_facturacion_search" model="ir.ui.view">
            <field name="name">Extension de filtros de factura: agregar campos</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <!--add nro control,vat,adress,bussiness name,date_reception-->
                <field name="name" position="after">
                    <field name="correlative"/>       
                    <field name="vat"/>
                    <field name="address"/>
                    <field name="date_reception" />            
                </field>

		<filter name="duedate" position="before">
		    <filter string="Tasa" name="rate" context="{'group_by': 'foreign_currency_rate'}"/>
		</filter>
            </field>
        </record>
    </data>
</odoo>
