<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_binaural_facturacion" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.binaural.facturacion</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
	        <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2>Configuraciones Binaural</h2>
                <div class="row mt16 o_settings_container" name="operations_setting_container_binaural_facturacion">
                    <div class="col-3 col-lg-3 o_setting_box">
                        <div class="o_setting_left_pane">
                            <div class="mt16 row">
                                   <field name="not_cost_higher_price_invoice" class="oe_inline" required="1"/>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">No permitir costo mayor o igual al precio de venta en facturas</span>
                            
                        </div>
                    </div>
                    <div class="col-3 col-lg-3 o_setting_box">
                        <div class="o_setting_left_pane">

                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Longitud de auxiliar de cuenta contable</span>
                            
                            <div class="mt16 row" style="margin-left:4px">
                                <field name="account_longitude_report" class="oe_inline" required="1"/>
                            </div>
                            
                        </div>
                    </div>
                </div>
                
			</xpath>
        </field>
    </record>
</odoo>
