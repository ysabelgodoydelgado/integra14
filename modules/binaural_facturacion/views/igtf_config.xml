<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="config_igtf_account_list">
      <field name="name">Cuenta contable de IGTF</field>
      <field name="model">account.igtf.config</field>
      <field name="arch" type="xml">
        <tree>
          <field name="destination_account_id"/>
          <field name="company_id" invisible="1" force_save="1"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

        <!-- View: Form -->
        <record id="config_igtf_account_form" model="ir.ui.view">
            <field name="name">Cuenta contable de IGTF</field>
            <field name="model">account.igtf.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="1">
                          <field name="destination_account_id"/>
                          <field name="company_id" invisible="1" force_save="1"/>
                          <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="config_account_igtf">
      <field name="name">Cuenta contable de IGTF</field>
      <field name="res_model">account.igtf.config</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="ConfiguraciÃ³n de cuenta contable de IGTF" id="menu_config_igtf" parent="account.menu_finance_configuration"
              action="config_account_igtf"/>
  </data>
</odoo>