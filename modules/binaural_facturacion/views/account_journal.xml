<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form_binaural" model="ir.ui.view">
            <field name="name">account.journal.form.binaural</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="fiscal" />
                </xpath>

            </field>
        </record>

        <record id="view_account_journal_tree_binaural" model="ir.ui.view">
            <field name="name">account.journal.tree.binaural</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_group_ids']" position="attributes">
                    <attribute name="string">Excluido de Grupo de Diarios</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>