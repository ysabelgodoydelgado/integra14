<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_form_inh" model="ir.ui.view">
            <field name="name">account.payment.form.inh</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">


                <field name="partner_id" position="after">
                    <field name="identification_doc" />
                </field>


                <xpath expr="//label[@for='amount']" position="before">

                    <field name="is_igtf" string="IGTF" attrs="{'readonly': [('state', '!=', 'draft')],'invisible':['|',('payment_type','!=','outbound'),('partner_type','!=','supplier')]}"></field>
                    <field name="percentage_igtf" string="Porcentaje IGTF" attrs="{'readonly': [('state', '!=', 'draft')],'invisible':[('is_igtf','=',False)]}"></field>

                    <field name="amount_igtf" readonly="1" force_save="1" attrs="{'invisible':[('is_igtf','=',False)]}"></field>
                    <field name="move_igtf" attrs="{'invisible':[('is_igtf','=',False)]}" readonly="1" force_save="1" />

                    <label for="foreign_currency_rate" />
                    <div name="foreign_currency_div" class="o_row">
                        <field name="foreign_currency_rate" attrs="{'readonly': [('state', '!=', 'draft')]}" />
                        <field name="foreign_currency_id" options="{'no_create': True, 'no_open': True}" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}" groups="base.group_multi_currency" />
                    </div>


                </xpath>

            </field>
        </record>

        <record id="view_account_payment_tree_inh" model="ir.ui.view">
            <field name="name">account.payment.tree.inh</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree" />
            <field name="arch" type="xml">

                <field name="partner_id" position="after">
                    <field name="identification_doc" />
                </field>

                <field name="amount" position="before">
                    <field name="foreign_currency_rate" />
                </field>

                <field name="journal_id" position="after">
                    <field name="ref" />
                </field>

            </field>
        </record>

        
        <record id="account_payment_tree_filter_inh_binaurall" model="ir.ui.view">
            <field name="name">account.payment.tree.filter.inh.binaural</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="identification_doc"/>
                </field>
            </field>
        </record>


    </data>
</odoo>