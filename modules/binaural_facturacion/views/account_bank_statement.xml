<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_bank_statement_form_inherit_binaural" model="ir.ui.view">
            <field name="name">Extension de formulario extracto bancario</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">

                
                
                <xpath expr="//header" position="inside">
                   
                        <button  string="Ajustar importe por tasas" name="check_rates" type="object" class="oe_stat_button" icon="fa-">
                        </button>
                        <field name="check_rate" />
                </xpath>
               <!-- <xpath expr="//header/button[@name='button_post']" position="attributes">
                    <attribute name="attrs"> {'invisible': [('rate_confirmed', '!=', 'True'),('require_confirmed_rate', '=', 'True')]}"/attribute>
                    
                </xpath>-->
          
                <xpath expr="//page[@name='statement_line_ids']/field[@name='line_ids']/tree/field[@name='payment_ref']" position="after">
                    <field name="foreign_currency_rate" force_save="1" attrs="{'readonly': [('parent.state', '!=', 'open')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>