<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_line_filter_binaural" model="ir.ui.view">
            <field name="name">account.move.line.filter.binaural</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="identification_doc"/>
                </field>

                <group position="inside">
                    <filter string="Tasa" name="rate" context="{'group_by': 'foreign_currency_rate'}"/>
                </group>
            </field>
        </record>

        <record id="view_account_move_line_tree_binaural" model="ir.ui.view">
            <field name="name">account.move.line.tree.binaural</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <tree position="inside">
                    <field name="foreign_currency_rate"/>
                    <field name="balance"/>
                    <field name="inverse_rate" optional="hide"/>
                </tree>

                <xpath expr="/tree/field[@name='company_id']" position="after">
                    <field name="identification_doc" />
                </xpath>

            </field>
        </record>

        <record id="view_account_move_line_form_binaural" model="ir.ui.view">
            <field name="name">account.move.line.form.binaural</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <field name="amount_currency" position="after">
                    <field name="foreign_currency_rate"/>
                    <field name="balance"/>
                    <field name="inverse_rate"/>
                </field>

                <field name="partner_id" position="after">
                    <label id="vat" for="vat" string="Nro CÃ©dula/RIF"/>
					<div id="vat" class="">
						<field name="prefix_vat" />
						<field name="vat" />
					</div>
                </field>
            </field>
        </record>
    </data>
</odoo>
