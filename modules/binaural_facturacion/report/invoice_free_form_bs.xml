<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_free_form_1_id_bs" model="ir.actions.report">
            <field name="name">Forma libre</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">binaural_facturacion.cumming_invoice_free_form_template_bs</field>
            <field name="report_file">binaural_facturacion.cumming_invoice_free_form_template_bs</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')
            </field>
            <field name="paperformat_id" ref="binaural_facturacion.paperformat_freeform_cumming_bs"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="print_report_name" >(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
