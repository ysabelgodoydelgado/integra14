                                                        <td style="width:420px;text-align:left;">
                                                            <span t-field="line.name"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td style="width:140px;text-align:center;">
                                                            <span t-field="line.product_id.default_code"/>
                                                        </td>
                                                        <!--<td style="width:150px;text-align:left;">
                                                            <span t-field="line.product_id.alternate_code"/>
                                                        </td>-->
                                                        <t t-if="line.product_id.name">
                                                            <t t-set="product_name"
                                                               t-value="line.product_id.name[0:35]"/>
                                                        </t>
                                                        <t t-else="">
                                                            <t t-set="product_name" t-value=""/>
                                                        </t>
                                                        <td style="width:420px;text-align:left;"><!--border: 1px solid black;-->
                                                            <span t-esc="line.name"/>

                                                        </td>
                                                    </t>
                                                    <!--<td style="width:40px;text-align:center;">
                                                        <span t-field="line.product_uom_id"/>
                                                    </td>-->
