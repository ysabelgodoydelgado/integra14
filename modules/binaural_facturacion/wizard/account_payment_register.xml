<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <!--add nro control-->
                <xpath expr="//label[@for='amount']" position="before">
                    <label for="foreign_currency_rate"/>
                    <div name="foreign_currency_div" class="o_row">
                        <field name="foreign_currency_rate" />
                        <field name="foreign_currency_id" options="{'no_create': True, 'no_open': True}" required="1"
                               groups="base.group_multi_currency"/>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>