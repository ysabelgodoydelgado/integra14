<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="binaural_anticipos.config_advance_account_list">
      <field name="name">Cuenta contable de anticipo</field>
      <field name="model">account.payment.config.advance</field>
      <field name="arch" type="xml">
        <tree>
          <field name="advance_account_id"/>
          <field name="advance_type"/>
          <field name="company_id" invisible="1" force_save="1"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

        <!-- View: Form -->
        <record id="binaural_anticipos.config_advance_account_form" model="ir.ui.view">
            <field name="name">Formulario de cuenta contable de anticipo</field>
            <field name="model">account.payment.config.advance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="1">
                            <field name="advance_account_id"/>
                            <field name="advance_type"/>
                            <field name="company_id" invisible="1" force_save="1"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="binaural_anticipos.config_advance_account_action">
      <field name="name">Cuentas contables de anticipo</field>
      <field name="res_model">account.payment.config.advance</field>
      <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="ConfiguraciÃ³n de cuentas contables de anticipo" id="binaural_anticipos.menu_config_advance" parent="account.menu_finance_configuration"
              action="binaural_anticipos.config_advance_account_action"/>
  </data>
</odoo>