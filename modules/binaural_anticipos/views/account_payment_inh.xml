<odoo>
  <data>

    <record id="view_form_account_payment_form_inh_bin" model="ir.ui.view">
        <field name="name">Extension de formulario de registro de pago</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_internal_transfer']" position="after">
                    <field name="is_advance" string="Anticipo" attrs="{'readonly': [('state', '!=', 'draft')]}"></field>
	                <field invisible="1" name="available_partner_bank_ids"/>
            </xpath>

        </field>
    </record>

