    <record id="invoice_inh_a" model="ir.ui.view">
        <field name="name">Extension de factura</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="after">
                <field name="invoice_outstanding_credits_debits_widget2" colspan="2" nolabel="1" widget="payment" attrs="{'invisible': [('state', 'not in', 'open')]}"/>
            </xpath>

        </field>
    </record>

        <!--Add column is advance in list-->
    <record id="view_list_account_payment_list_inh_bin_customer" model="ir.ui.view">
        <field name="name">Extension de listado de pagos registrados</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="is_advance" string="Anticipo"></field>
	            <field invisible="1" name="available_partner_bank_ids"/>
            </xpath>

        </field>
    </record>


