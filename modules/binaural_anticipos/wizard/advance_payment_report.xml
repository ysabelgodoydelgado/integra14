<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="form_action_payment_list_wizard" model="ir.ui.view">
        <field name="name">Listado de anticipos</field>
        <field name="model">wizard.advance.payment.list</field>
        <field name="arch" type="xml">
            <form string="PDF Listado de socios">
                
                    <group>
                        <group>
                            <field name="type_report" readonly="1" force_save="1"/>
                            <field name="type_payment" />
                            <field name="all_partner" />
                            <field name="partner" attrs="{'invisible':[('all_partner','=',True)]}"/>
                            <field name="type_residual" />
                            <field name="at_today" />
                            <field name="start_date" attrs="{'invisible':[('at_today','=',True)]}"/>
                            <field name="end_date" attrs="{'invisible':[('at_today','=',True)]}"/>
                        </group>
                    </group>
                                      
                <footer>
                    <button name="print_pdf_payments" string="Imprimir" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_report_advance_payment_list" model="ir.actions.act_window" >
        <field name="name">PDF Listado de anticipos de clientes</field>
        <field name="res_model">wizard.advance.payment.list</field>
        <field name="type">ir.actions.act_window</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field><!--inline-->
        <field name="context">{'default_type_report': 'customer','default_type_payment':'advance'}</field>
    </record>

    <record id="action_report_advance_payment_list_supplier" model="ir.actions.act_window" >
        <field name="name">PDF Listado de anticipos de proveedores</field>
        <field name="res_model">wizard.advance.payment.list</field>
        <field name="type">ir.actions.act_window</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field><!--inline-->
        <field name="context">{'default_type_report': 'supplier','default_type_payment':'advance'}</field>
    </record>
	    <menuitem name="Listado anticipo de clientes" id="binaural_anticipos.action_payment_report_list_id" parent="account.menu_finance_reports" action="action_report_advance_payment_list"/>
        <menuitem name="Listado anticipo de proveedores" id="binaural_anticipos.action_payment_report_list_id_provider" parent="account.menu_finance_reports" action="action_report_advance_payment_list_supplier"/>
    </data>
</odoo>