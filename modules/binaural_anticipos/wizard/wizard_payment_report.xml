<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_wizard_all_payments" model="ir.ui.view">
        <field name="name">Informe de pagos</field>
        <field name="model">wizard.payment.report.all</field>
        <field name="arch" type="xml">
            <form string="Informe de pagos">
                    <group>
                        <group>
                            <field name="payment_type" />
                            <field name="journal_id" />
                            <field name="start_date" />
                            <field name="end_date" />
                            
                        </group>
                    </group>
                                      
                <footer>
                    <button name="generate_report_payment" string="Generar" type="object" class="oe_highlight" />
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

	    <record id="action_report_all_payments" model="ir.actions.act_window" >
	        <field name="name">Informe de pagos</field>
	        <field name="res_model">wizard.payment.report.all</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="binding_view_types">form</field>
	        <field name="view_mode">form</field>
	        <field name="target">new</field><!--inline-->
	    </record>

	    <menuitem name="Informe de pagos" id="binaural_anticipos.bin_payment_all_report" parent="account.menu_finance_reports" action="action_report_all_payments"/>
    </data>
</odoo>